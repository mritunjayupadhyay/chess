{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2021",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@myproject/shared": ["../../packages/shared/dist"],
      "@myproject/shared/*": ["../../packages/shared/dist/*"],
      "@myproject/chess-logic": ["../../packages/chess-logic/dist"],
      "@myproject/chess-logic/*": ["../../packages/chess-logic/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "../../packages/shared" },
    { "path": "../../packages/chess-logic" }
  ]
}
